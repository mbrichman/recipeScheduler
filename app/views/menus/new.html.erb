<h1>New Menu</h1>


<%= form_tag(menus_url, method: 'post') do %>


  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>

    <div>
    <%= label_tag :menu_date %><br />
    <%= text_field_tag :menu_date, Date.today %>
  </div>


  <div>
    <%= submit_tag "Create Menu" %>
  </div>
<% end %>
