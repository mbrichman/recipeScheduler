<h1><%= @recipe.name %></h1>

<h2>Ingredients</h2>
<ul>
<% @recipe.ingredients.where(:step_type => 'I').each do |i| %>
<li><%= i.ingredient %></li>
<% end %>
</ul>
<h2>Directions</h2>
<ol>
<% @recipe.ingredients.where(:step_type => 'D').each do |d| %>
<li><%= d.ingredient %></li>
<% end %>
</ol>

<%= link_to 'Add to Menu...', edit_recipe_path(@recipe.id) %>

<p><%= link_to 'Delete this recipe...', recipe_path(@recipe), method: 'delete' %>

</p>
<%= @recipe.key_temps %>
